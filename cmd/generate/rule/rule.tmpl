package rules

import (
	"regexp"

	"github.com/rs/zerolog/log"

	"github.com/zricethezav/gitleaks/v8/config"
	"github.com/zricethezav/gitleaks/v8/detect"
)

func {{ .Name }}() *config.Rule {
	// define rule
	r := config.Rule{
		Description: "{{ .Description }}",
		RuleID:      "{{ .RuleID }}",
		Regex:       "TODO",
		Keywords:    []string{"{{ .Keyword }}"},
	}

	// validate
	tps := []string{
		generateSampleSecret("{{ .Keyword }}", "TODO"),
	}
	d := detect.NewDetector(config.Config{
		Rules: []*config.Rule{&r},
	})
	for _, tp := range tps {
		if len(d.DetectString(tp)) != 1 {
			log.Fatal().Msg("Failed to validate {{ .RuleID }}")
		}
	}
	return &r
}
